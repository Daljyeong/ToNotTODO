<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="감정과 피로도에 맞는 할 일을 추천드릴게요!\n오늘의 상태를 기록해 주세요"
        android:fontFamily="@font/jua_400"
        android:lineSpacingExtra="10sp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_condition_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="오늘 당신의 컨디션은 몇 점인가요?"
        android:fontFamily="@font/jua_regular"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_condition_face_5"
        app:layout_constraintTop_toBottomOf="@id/tv_ment"/>
    <ImageView
        android:id="@+id/iv_condition_face_5"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_condition_5"
        app:layout_constraintTop_toBottomOf="@id/tv_condition_score"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toStartOf="@id/iv_condition_face_4" />

    <ImageView
        android:id="@+id/iv_condition_face_4"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_condition_4"
        app:layout_constraintTop_toBottomOf="@id/tv_condition_score"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toStartOf="@id/iv_condition_face_3"
        android:layout_marginEnd="35dp"/>
    <ImageView
        android:id="@+id/iv_condition_face_3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_condition_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_condition_score"
        android:layout_marginTop="14dp"/>
    <ImageView
        android:id="@+id/iv_condition_face_2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_condition_2"
        app:layout_constraintStart_toEndOf="@id/iv_condition_face_3"
        app:layout_constraintTop_toBottomOf="@id/tv_condition_score"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp"/>
    <ImageView
        android:id="@+id/iv_condition_face_1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_condition_1"
        app:layout_constraintStart_toEndOf="@id/iv_condition_face_2"
        app:layout_constraintTop_toBottomOf="@id/tv_condition_score"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp"/>

    <ImageView
        android:id="@+id/iv_num_gray_5"
        android:layout_width="11dp"
        android:layout_height="30dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_num_gray_5"
        app:layout_constraintStart_toStartOf="@id/iv_condition_face_5"
        app:layout_constraintTop_toBottomOf="@id/iv_condition_face_5" />
    <ImageView
        android:id="@+id/iv_num_gray_4"
        android:layout_width="13dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_num_gray_4"
        app:layout_constraintTop_toBottomOf="@id/iv_condition_face_4"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_condition_face_4"
        android:layout_marginStart="13dp"/>

    <ImageView
        android:id="@+id/iv_num_gray_3"
        android:layout_width="11dp"
        android:layout_height="30dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_num_gray_3"
        app:layout_constraintStart_toStartOf="@id/iv_condition_face_3"
        app:layout_constraintTop_toBottomOf="@id/iv_condition_face_3" />

    <ImageView
        android:id="@+id/iv_num_gray_2"
        android:layout_width="11dp"
        android:layout_height="30dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_num_gray_2"
        app:layout_constraintStart_toStartOf="@id/iv_condition_face_2"
        app:layout_constraintTop_toBottomOf="@id/iv_condition_face_2" />

    <ImageView
        android:id="@+id/iv_num_gray_1"
        android:layout_width="8dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_num_gray_1"
        app:layout_constraintTop_toBottomOf="@id/iv_condition_face_1"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_condition_face_1"
        android:layout_marginStart="13dp"/>

    <TextView
        android:id="@+id/tv_mood_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 당신의 기분은 몇 점인가요?"
        android:fontFamily="@font/jua_regular"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_condition_face_5"
        app:layout_constraintTop_toBottomOf="@id/iv_num_gray_5"
        android:layout_marginTop="35dp"/>
    <ImageView
        android:id="@+id/iv_mood_face_5"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_mood_5"
        app:layout_constraintTop_toBottomOf="@id/tv_mood_score"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toStartOf="@id/iv_mood_face_4"
        android:layout_marginEnd="35dp"/>
    <ImageView
        android:id="@+id/iv_mood_face_4"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_mood_4"
        app:layout_constraintTop_toBottomOf="@id/tv_mood_score"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toStartOf="@id/iv_condition_face_3"
        android:layout_marginEnd="35dp"/>
    <ImageView
        android:id="@+id/iv_mood_face_3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_mood_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mood_score"
        android:layout_marginTop="14dp"/>
    <ImageView
        android:id="@+id/iv_mood_face_2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_mood_2"
        app:layout_constraintStart_toEndOf="@id/iv_mood_face_3"
        app:layout_constraintTop_toBottomOf="@id/tv_mood_score"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp"/>
    <ImageView
        android:id="@+id/iv_mood_face_1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_mood_1"
        app:layout_constraintStart_toEndOf="@id/iv_mood_face_2"
        app:layout_constraintTop_toBottomOf="@id/tv_mood_score"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp"/>
    <ImageView
        android:id="@+id/iv_mood_num_5"
        android:layout_width="11dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_num_gray_5"
        app:layout_constraintTop_toBottomOf="@id/iv_mood_face_5"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_mood_face_5"
        android:layout_marginStart="13dp"/>
    <ImageView
        android:id="@+id/iv_mood_num_4"
        android:layout_width="13dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_num_gray_4"
        app:layout_constraintTop_toBottomOf="@id/iv_mood_face_4"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_mood_face_4"
        android:layout_marginStart="13dp"/>
    <ImageView
        android:id="@+id/iv_mood_num_3"
        android:layout_width="11dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_num_gray_3"
        app:layout_constraintTop_toBottomOf="@id/iv_mood_face_3"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_mood_face_3"
        android:layout_marginStart="13dp"/>

    <ImageView
        android:id="@+id/iv_mood_num_2"
        android:layout_width="11dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_num_gray_2"
        app:layout_constraintTop_toBottomOf="@id/iv_mood_face_2"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_mood_face_2"
        android:layout_marginStart="13dp"/>

    <ImageView
        android:id="@+id/iv_mood_num_1"
        android:layout_width="8dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_num_gray_1"
        app:layout_constraintTop_toBottomOf="@id/iv_mood_face_1"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_mood_face_1"
        android:layout_marginStart="13dp"/>


    <TextView
        android:id="@+id/tv_condition_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/skip_record"
        android:fontFamily="@font/pretendard_600"
        android:textColor="@color/gray_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btn_condition_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_condition_next"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/main_green"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_btn_apply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pretendard_700"
            android:gravity="center"
            android:text="다음"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>