<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MypageFragment">

    <!-- 상단바 -->
    <!-- TODO: 길이 넘칠듯 .. 스크롤되게 하기~ -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_mypage_top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_app_bar"
        app:layout_constraintTop_toTopOf="parent">

        <!-- TODO: font 설정하기 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="12dp"
            android:text="마이페이지"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 상단바 외의 부분 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/cl_mypage_top_app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TODO: Pretendard Bold로 font 설정하기 -->
            <TextView
                android:id="@+id/tv_mypage_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 7일간 나의 투낫투두 통계"
                android:textSize="18sp" />

            <!-- 상태바 -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart_mypage"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_100" />

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray" />

            <!-- 나의 시소 모아보기 -->
            <!-- TODO: Pretendard Bold로 font 설정하기 -->
            <TextView
                android:id="@+id/tv_mypage_seesaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="나의 시소 모아보기"
                android:textSize="18sp" />

            <!-- 진행중 & 종료 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- 진행중 버튼 -->
                <CheckBox
                    android:id="@+id/checkbox_in_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/checkbox_selector"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="진행중"
                    android:textColor="@drawable/checkbox_textcolor_selector"
                    android:textSize="14sp" />

                <!-- 종료 버튼 -->
                <CheckBox
                    android:id="@+id/checkbox_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/checkbox_selector"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="종료"
                    android:textColor="@drawable/checkbox_textcolor_selector"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>